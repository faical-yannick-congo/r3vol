server {
	client_max_body_size 10G;
	{{ "ssl_certificate     /r3vol-ssl/r3vol.crt;" if mode == "https" else "" }}
	{{ "ssl_certificate_key /r3vol-ssl/r3vol.key;" if mode == "https" else "" }}
    {{ "listen "~mapped_port~" ssl;" if mode == "https" else "listen "~mapped_port~";" }}
    server_name 0.0.0.0 localhost {{ ansible_ssh_host }} r3vol.io r3vol.com r3vol.net;
    root {{ frontend_path }};

    location / {
        }
}